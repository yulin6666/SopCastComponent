<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg_cover">

    <TextView
        android:id="@+id/tv_title"
        style="@style/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adding To Favorite"/>

    <FrameLayout
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <LinearLayout
        android:layout_below="@id/tv_message"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
            android:id="@+id/tv_beizhu"
            android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
            android:text="备注:"/>

            <EditText
                android:id="@+id/afterEditView"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <RadioButton
                android:id="@+id/afterRadioButton"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="是否禁用"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/tv_message"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_negative"
            style="@style/dialog_button_negative"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:textSize="@dimen/font_medium"
            android:text="Cancel"/>

        <Button
            android:id="@+id/btn_positive1"
            style="@style/dialog_button_positive"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:visibility="visible"
            android:text="Yes"/>

    </LinearLayout>
</LinearLayout>